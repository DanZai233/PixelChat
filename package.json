{
  "name": "pixel-chat",
  "version": "1.0.0",
  "description": "像素风格匿名聊天室 - 前后端分离版本",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && go run main.go",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "cd server && go run main.go",
    "install:all": "npm install && cd client && npm install && cd ../server && go mod tidy"
  },
  "keywords": ["chat", "pixel", "anonymous", "websocket", "react"],
  "author": "PixelChat Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
